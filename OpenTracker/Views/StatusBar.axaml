<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:OpenTracker.ViewModels;assembly=OpenTracker"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" x:Class="OpenTracker.Views.StatusBar">

  <Design.DataContext>
    <vm:StatusBarVM />
  </Design.DataContext>
  
  <Border Classes="ControlBorder StatusBar" BorderThickness="0 1 0 0">
    <ContentControl Content="{Binding AutoTrackerStatus}" Margin="5 2"
                    HorizontalAlignment="Right" />
  </Border>
  
</UserControl>
