<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:OpenTracker.ViewModels.AutoTracking;assembly=OpenTracker"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" x:Class="OpenTracker.Views.AutoTracking.AutoTrackerStatus">
  
  <Design.DataContext>
    <vm:AutoTrackerStatusVM />
  </Design.DataContext>
  
  <StackPanel Orientation="Horizontal">
    <TextBlock Classes="AutoTrackerLabel">AutoTracking Status is:</TextBlock>
    <TextBlock Classes="AutoTrackerStatus"
               Foreground="{Binding StatusTextColor, Mode=OneWay}"
               Text="{Binding StatusText}" />
  </StackPanel>
  
</UserControl>
